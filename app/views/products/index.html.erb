<h1>Products</h1>

<% @products.each do |product| %>
<div class="bg-dark text-white" card mb-3" style="max-width: 540px;">

  <div class="row g-0 ">
    <div class="col-md-4">
      <img src=<%= product.img %> alt="..." width="100%"    height="100%" >
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"> price : <%= product.price %> </p>
        <p class="card-text"><small class="text-muted">code : <%=  product.code %></small></p>
        <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %> <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> </p>
      </div>
    </div>
  </div>
</div>

  <% end %>
